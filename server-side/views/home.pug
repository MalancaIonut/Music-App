doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')
    link(rel='stylesheet' href='public/styles/home.css', type='text/css')
body
    include nav.pug
    br
    .container
        h3 TOP 15 SONGS
        br
        table.table.table-striped.table-info 
            thead 
                tr 
                    th(scope='col') Position
                    th(scope='col') Artist Name
                    th(scope='col') Song Title
                    th(scope='col') YouTube Link
                    th(scope='col') Votes No.
            tbody
                each track, index in top
                    tr 
                        th(scope='row')= index + 1
                        td= track.artist 
                        td= track.title 
                        td
                            a(href= track.link) YouTube HERE
                        td= track.track_votes
    script
        include ../../client_scripts/home.js